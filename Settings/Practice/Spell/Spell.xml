<Spells>
    <List>
        <Spell Name="Spell_Niubi1">
            <DisplayName>外门符</DisplayName>
            <Desc>大幅度提升外门弟子能力。使外门弟子专注于工作。\n[color=#D06508]静心外门[/color]</Desc>
            <Template>Spell/main_texture_happy01</Template>
            <Effects>
                <!--提高移动速度-->
                <li Name="MoveSpeed" AddP="0.5"/>
                <!--可以提高睡眠质量，并让人不易疲劳。-->
                <li Name="FatigueConsumeConstant" AddP="-0.3"/>
                <li Name="FatigueRecoveryConstant" AddP="0.3"/>
                <!--降低身体对食物与水的消耗。-->
                <li Name="NutritionConsumeConstant" AddP="-0.3"/>
                <li Name="WaterConsumeConstant" AddP="-0.3"/>
                <!--让人心情轻微变好，且降低娱乐值的衰减速度。-->
                <li Name="HappyConsumeConstant" AddP="-0.3"/>
                <li AddV="10" Name="BaseEmotionAddV"/>
                <!--提高治疗的成功率和疗效-->
                <li Name="TreatmentExpectQuality" AddP="0.3"/>
                <li Name="TreatSuccessChance" AddP="0.3"/>
                <!--可以提高身体自然恢复力的符咒。-->
                <li Name="RecoveryPower" AddP="0.3"/>
                <!--使手脚灵敏，工作效率提高。-->
                <li Name="GlobalEfficiency" AddP="1"/>
                <!-- 提高烹饪速度 -->
                <li Name="CookingSpeed" AddP="1"/>
                <!-- 提高种植速度 -->
                <li Name="PlantWorkSpeed" AddP="1"/>
                <!-- 提高收获速度 -->
                <li Name="PlantHarvestSpeed" AddP="1"/>
                <!-- 提高采掘速度 -->
                <li Name="MiningSpeed" AddP="1"/>
                <!-- 提高割除速度 -->
                <li Name="CuttingSpeed" AddP="1"/>
                <!-- 提高锻造速度 -->
                <li Name="SmithingSpeed" AddP="1"/>
                <!-- 提高手工速度 -->
                <li Name="HandworkSpeed" AddP="1"/>
                <!-- 提高缝纫速度 -->
                <li Name="TailoringSpeed" AddP="1"/>
                <!-- 提高清洁速度 -->
                <li Name="CleanSpeed" AddP="1"/>
                <!-- 提高打猎，种植、采掘收获时的产量。 -->
                <li Name="PlantHarvestYieldEfficiency" AddP="1"/>
                <li Name="ButcherYieldEfficiency" AddP="1"/>
                <li Name="MiningYieldEfficiency" AddP="1"/>
                <!-- 提高制作物的品质。 -->
                <li AddV="1" Name="MadeQualityAddValue"/>
                <!-- 提高耐寒能力 -->
                <li AddV="-20" Name="ComfyTMin"/>
                <li AddV="-20" Name="ToleranceTMin"/>
                <!-- 提高耐热能力 -->
                <li AddV="80" Name="ComfyTMax"/>
                <li AddV="80" Name="ToleranceTMax"/>
                <!-- 使头脑清明，提高学习能力。 -->
                <li Name="IntelligenceSkillEXPConstant" AddP="1"/>
            </Effects>
        </Spell>
